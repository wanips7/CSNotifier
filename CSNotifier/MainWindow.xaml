<Window x:Class="CSNotifier.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CSNotifier"
        mc:Ignorable="d"
        Title="CSNotifier" Height="286" Width="426" 
        WindowStartupLocation="CenterScreen" 
        ResizeMode="CanMinimize" Closing="Window_Closing" Icon="/Resources/icon.ico" Loaded="Window_Loaded">
    <Grid>
        <CheckBox x:Name="ShowNotificationCheckBox" Content="Show notification when the round starts" Margin="10,56,0,0" VerticalAlignment="Top" Width="326" Click="ShowNotificationCheckBox_Click"/>
        <CheckBox x:Name="RestoreGameWindowCheckBox" Content="Restore the game window when the round starts" Margin="10,93,0,0" VerticalAlignment="Top" Width="360" Click="RestoreGameWindowCheckBox_Click"/>
        <CheckBox x:Name="StartListeningAfterLaunchingCheckBox" Content="Start listening after launching" Margin="10,130,0,0" VerticalAlignment="Top" Width="360" Click="StartListeningAfterLaunchingCheckBox_Click"/>

        <Button x:Name="ButtonStart" Content="Start" Margin="10,10,0,0" Click="ButtonClickStart" Width="73" VerticalAlignment="Top"/>
        <Button x:Name="ButtonStop" Content="Stop" Margin="100,10,0,0" VerticalAlignment="Top" Click="ButtonClickStop" Width="73" IsEnabled="False"/>


        <StatusBar Height="26" VerticalAlignment="Bottom" Padding="0" >
            <StatusBarItem Height="24" Width="200" VerticalAlignment="Center" HorizontalAlignment="Left">
                <StackPanel Orientation="Horizontal">
                    <TextBlock 
                        x:Name="TextBlockStatus" 
                        Text="Status: not listening"                     
                        Height="20" Width="130" 
                        Margin="10, 0, 0, 0"
                        HorizontalAlignment="Center" VerticalAlignment="Center"                                             
                        TextWrapping="Wrap"                               
                    />

                    <TextBlock 
                        x:Name="TextBlockStatusChar" 
                        Text="⬤"                     
                        Height="20" Width="20" 
                        HorizontalAlignment="Center" VerticalAlignment="Center" 
                        Foreground="#FF7E7E7E"                    
                        TextWrapping="Wrap"                               
                    />
                </StackPanel>
            </StatusBarItem>
        </StatusBar>

        <Button Content="Copy GSI file" Margin="0,0,10,31" VerticalAlignment="Bottom" Click="Button_Click" HorizontalAlignment="Right"/>
        <Button Content="Copy command" Margin="0,0,130,31" VerticalAlignment="Bottom" Width="126" HorizontalAlignment="Right" Click="Button_Click_2"/>



    </Grid>
</Window>
