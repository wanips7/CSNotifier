<Window x:Class="CSNotifier.Windows.CustomMessageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CSNotifier.Windows"
        mc:Ignorable="d"
        Title="Message" Height="205" Width="397" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <TextBlock x:Name="ContentTextBlock" HorizontalAlignment="Center" Margin="0,20,0,0" Text="TextBlock" VerticalAlignment="Top" Height="101" Width="353" TextWrapping="Wrap"/>

        <Button Content="Ok" VerticalAlignment="Bottom" Width="76" HorizontalAlignment="Center" Click="Button_Click" Margin="0,0,0,15"/>


    </Grid>
</Window>
